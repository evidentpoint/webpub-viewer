{
  "name": "webpub-viewer",
  "version": "0.1.0",
  "author": "EDRLab",
  "description": "A viewer application for EPUB files.",
  "repository": "https://github.com/edrlab/webpub-viewer",
  "license": "Apache-2.0",
  "private": true,
  "main": "src/index.js",
  "typings": "src/index.ts",
  "engines": {
    "node": ">8.0.0"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "webpack && tsc --p tsconfig-sw.json && npm run sass && cpx 'dist/*.{css,js}' viewer/",
    "sass": "node-sass --source-map true src/styles/sass/ -o dist/",
    "test": "rimraf lib && tsc --p tsconfig-test.json && mocha --require jsdom-global/register --recursive lib/test",
    "visual-test": "backstop test",
    "visual-test:docker": "npm run visual-test -- --docker",
    "visual-test:init": "backstop reference",
    "visual-test:init:docker": "npm run visual-test:init -- --docker",
    "visual-test:update": "backstop approve",
    "visual-test:update:docker": "npm run visual-test:update -- --docker",
    "static": "node \"./examples/static/static-server.js\"",
    "static:docker": "docker-compose up",
    "clean": "rimraf node_modules lib dist",
    "prepublishOnly": "npm run test",
    "about": "echo 'Do not update @types/parse5 to version 5 or else it will break jsdom typings!'"
  },
  "dependencies": {
    "@evidentpoint/readium-glue-modules": "^1.2.2",
    "@readium/glue-modules": "^1.3.1",
    "@readium/glue-rpc": "^1.3.1",
    "@readium/glue-shared": "^1.3.0",
    "@readium/navigator-web": "^1.0.0-beta.2",
    "promise-polyfill": "^8.1.0",
    "readium-css": "readium/readium-css",
    "url-polyfill": "^1.1.3",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/jquery": "^3.3.29",
    "@types/jsdom": "^2.0.30",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.10.4",
    "@types/parse5": "^5.0.0",
    "@types/promise-polyfill": "^6.0.2",
    "@types/sinon": "^7.0.8",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "express": "^4.16.4",
    "file-loader": "^4.0.0",
    "jsdom": "^9.8.3",
    "jsdom-global": "^2.1.0",
    "mocha": "^6.0.2",
    "node-sass": "^4.11.0",
    "r2-streamer-js": "1.0.7",
    "reflect-metadata": "^0.1.13",
    "requirejs": "^2.3.6",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.7",
    "ts-loader": "^6.0.2",
    "typescript": "^3.2.2",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2"
  }
}
